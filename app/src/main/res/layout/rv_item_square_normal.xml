<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/rv_square_article_author"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="xiaoyang"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <com.eric.wanandroid.base.ui.StrokeTextView
        android:id="@+id/rv_square_article_isnew"
        android:text="新"
        android:padding="2dp"
        android:textColor="#ff0000"
        app:strokeWidthX="2"
        app:layout_constraintStart_toEndOf="@+id/rv_square_article_author"
        app:layout_constraintBaseline_toBaselineOf="@id/rv_square_article_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rv_square_article_nice_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="时间：24小时前"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rv_square_article_title"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_square_article_author"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:text="呵呵哈哈哈或或或或或或或或或或或或或或或或"
        android:maxLines="1"
        android:textColor="#000000"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rv_square_article_chapter"
        android:text="@string/qa"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/rv_square_article_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/rv_square_article_collected"
        android:src="@drawable/ic_favorite_border"
        android:layout_marginEnd="5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>